[ -n "$WORKSPACE_CONF" ] || WORKSPACE_CONF=$PWD/workspace.conf

[ -e $WORKSPACE_CONF ] || {
    echo "-- ceating sample workspace config in $WORKSPACE_CONF"
    cat <<EOF > $WORKSPACE_CONF
# autogenerated by $(basename $0) on $(date)
#
# this file is sourced by workspace setup helper

# adjust to control how tmux windows are named, window name is
# composed like this: \${NAME_PATTERN}{index}
NAME_PATTERN="work-"

# environment configuration sourced before your shell
ENV_SETUP=\$PWD/env-setup

EOF
    touch $PWD/env-setup

}

[ -n "$TMUX" ] || {
    echo "start tmux first"
    exit 1
}

source $WORKSPACE_CONF

guess_window_name() {
    # tmux list-windows:
    # 0: python (1 panes) [239x73] [layout c1dd,239x73,0,0,0] @0
    # 1: mutt (1 panes) [239x73] [layout c1de,239x73,0,0,1] @1
    # 2: m1* (1 panes) [239x73] [layout c1df,239x73,0,0,2] @2 (active)
    # 3: work-1- (1 panes) [239x73] [layout 6125,239x73,0,0,35] @35
    last_window=$(tmux list-windows | \
                         awk "/$NAME_PATTERN/ { print \$2 }" | \
                         sed -e 's/[-\*]$//' | \
                         sort -n | \
                         tail -1)
    new_idx=1
    if [ -n "$last_window" ]; then
        last_idx="${last_window#$NAME_PATTERN}"
        new_idx=$(($last_idx + 1))
    fi

    echo "${NAME_PATTERN}${new_idx}"
}

case "$1" in
    "-h")
        tmux_cmd='split-window -h'
        ;;
    "-v")
        tmux_cmd='split-window -v'
        ;;
    *)
        window_name=$(guess_window_name)
        tmux_cmd="new-window -n $window_name"
esac

tmux $tmux_cmd -c $PWD "source $ENV_SETUP && export WORKSPACE_CONF=$WORKSPACE_CONF && $SHELL"
