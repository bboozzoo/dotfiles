[gui]
	fontui = -family \"DejaVu Sans\" -size 10 -weight normal -slant roman -underline 0 -overstrike 0
	fontdiff = -family Courier -size 9 -weight normal -slant roman -underline 0 -overstrike 0
[gc]
        auto = 1
[alias]
    fp = format-patch --full-index
    lod = log --oneline --decorate
    lol = log --oneline --graph --decorate
    lou = log --oneline --graph --decorate --branches --not --remotes
    loggr = log --grep
    really-clean = clean -fdx
    st = status -sb
    ci = commit
    co = checkout
    ls-not-added = ls-files --others --exclude-standard
    ls-staged = diff --cached --name-status
    branches = branch -vv
[push]
    default = current

